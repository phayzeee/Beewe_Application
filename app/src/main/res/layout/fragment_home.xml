<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="93dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/segoeuib"
                    android:layout_gravity="center"
                    android:text="Home"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/toolbar_title" />



            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/second"
            android:layout_below="@+id/first"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bigrec"
            android:elevation="6dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/abc"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                />
            <ImageView
                android:id="@+id/circle_image"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:src="@drawable/circle"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/peter_txt"
                android:layout_toEndOf="@+id/circle_image"
                android:layout_marginStart="8dp"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:fontFamily="@font/seguisb"
                android:text="Peter"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/peter_sec"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:fontFamily="@font/seguisb"
                android:text="America"
                android:layout_marginStart="170dp"
                android:layout_below="@+id/peter_txt"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/third_txt"
                    android:padding="3dp"
                    android:background="@drawable/smallrec"
                    android:text="$0.000"
                    android:textSize="28dp"
                    android:fontFamily="@font/seguisb"
                    android:textColor="#FB9F3B"/>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:id="@+id/third"
            android:layout_below="@+id/second"
            android:layout_marginTop="15dp"
            android:elevation="6dp"
            android:background="#ffffff"
            >
            <LinearLayout
                android:id="@+id/first_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="6dp"
                android:weightSum="3"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="210dp"
                android:background="@drawable/normal_rec"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_small"
                    android:id="@+id/linear_img"
                    />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/path"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Money"
                    android:fontFamily="@font/seguisb"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="6dp"
                android:background="@drawable/normal_rec"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="220dp"
                android:layout_marginEnd="20dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_mble"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/path"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/send"
                    android:text="Add Money"
                    android:fontFamily="@font/seguisb"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16dp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/thirdd_layout"
            android:layout_below="@+id/third"
            android:layout_marginTop="20dp"
            android:elevation="6dp"
            android:background="#ffffff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_a"
                android:text="Lorem Ipsum"
                android:fontFamily="@font/seguisb"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#FB9F3B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_b"
                android:fontFamily="@font/segoeui"
                android:textSize="16dp"
                android:layout_below="@+id/text_a"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="180dp"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_a"
                android:layout_below="@id/text_b"
                android:layout_marginStart="12dp"
                android:background="@drawable/colored_rec"
                android:layout_marginEnd="260dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="6dp"
                android:text="get 00% discount"
                android:textColor="#ffffff"
                android:fontFamily="@font/seguisb"
                android:paddingStart="5dp"
                android:paddingEnd="3dp"
                android:textAllCaps="false"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_bhago"
                android:layout_marginStart="270dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_a"
                android:id="@+id/lol"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
                android:textSize="9dp"
                android:layout_marginTop="-20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More"
                android:layout_below="@+id/btn_a"
                android:layout_marginTop="-26dp"
                android:layout_marginStart="320dp"
                android:textColor="#FB9F3B"/>


        </RelativeLayout>



    </RelativeLayout>
</ScrollView>